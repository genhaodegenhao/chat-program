/* pages/index/shopper/shopper.wxss */
.seller {
    overflow: scroll;
    height: 355px;
}
.deliveryInfo, .activity, .infomation, .sellerPic {
    padding: 16rpx 20rpx;
}
.title {
    font-weight: bold;
    font-size: 36rpx;
}
.deliveryInfo .time, .deliveryInfo .price, .infomation .info {
    font-size: 28rpx;
}
.sliderBg {
    width: 100%;
    height: 20rpx;
    background: #f5f5f5;
}
.activity .info {
    font-size: 28rpx;
    display: flex;
    margin: 10rpx 0;
    align-items: center;
}
.activity .iconStyle {
    padding: 10rpx;
    background: rgb(240, 115, 115);
    color: #fff;
    align-self: center;
    margin-right: 6rpx;
}
.sellerPic {
    overflow: hidden;
}
.sellerPic .img {
    width: 200rpx;
    height: 200rpx;
}
.sellerPic .left {
    float: left;
    margin: 0 10rpx;
}
/* 食品详情页 */
@import '../content/content.wxss';

.food-wrapper {
  background: #f3f5f7;
}
.food-img image{
  width: 100%;
  height: 700rpx;
}
.food-desc {
  padding: 36rpx;
  background: #fff;
}

.food-cont {
  padding: 36rpx;
  margin: 32rpx 0;
  background: #fff;
  border-bottom: 2rpx solid rgba(7,17,27,.1);
  border-top: 2rpx solid rgba(7,17,27,.1);
}
.food-intr {
  font-size: 28rpx;
  font-weight: 700;
  color: #07111b;
}
.food-info {
  font-size: 24rpx;
  font-weight: 200;
  color: #4d555d;
  line-height: 48rx;
  margin: 12rpx 24rpx 0;
}
/*商品评价*/
.rating-types{
  margin: 0 36rpx;
  padding-bottom: 36rpx;
  position: relative;
}
.rating-types:after {
  content: " ";
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  border-top: 1px solid rgba(7, 17, 27, 0.1);
}
.rating-types .dec {
  font-size: 28rpx;
  font-weight: bold;
}
.rating-type {
  display: inline-block;
  margin: 36rpx 16rpx 0 0;
  padding: 16rpx 24rpx;
  font-size: 24rpx;
  line-height: 32rpx;
  color: #4d555d;
  border-radius: 4rpx; 
}
.rating-types .positive {
  background: rgba(0, 160, 220, 0.2);
}
.rating-types .negative {
  background: rgba(77, 85, 93, 0.2);
}
.rating-types .type-active {
  color: #fff;
  background: #00a0dc;
  transition: all 0.3s;
}
.rating-types text {
  margin-left: 10rpx;
}

@import '../../iconfont.wxss';

.rating-switch {
  height: 60rpx;
  line-height: 60rpx;
  padding: 24rpx;
  position: relative;
}
.rating-switch:after {
  content: " ";
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
  display: block;
  border-top: 1px solid rgba(7, 17, 27, 0.1);
}
.only-show {
  font-size: 24rpx;
  color: #93999f;
  margin-left: 8rpx;
  display: inline-block;
  vertical-align: top;
}
.iconfont.active {
  color: green;
}